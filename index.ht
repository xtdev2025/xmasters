            // Itens extras adicionados (103-105)
            { id: 103, name: "DatoCMS", offerType: "FREE TIER", type: "CMS Headless", category: "Backend & DB", url: "https://www.datocms.com/", summary: "CMS Headless em tempo real com Free Tier generoso em registros e largura de banda.", detail: "Um CMS Headless amigável para desenvolvedores e editores. Ótimo para projetos estáticos ou Jamstack que exigem um painel de edição elegante.", features: ["3 usuários na workspace.", "Até 3 ambientes.", "5.000 registros (records)."]},
            { id: 104, name: "Clerk", offerType: "FREE TIER", type: "Autenticação (Auth)", category: "Ferramentas & APIs", url: "https://clerk.com/", summary: "Gerenciamento de autenticação moderno (Login, User Profile) para Next.js e React.", detail: "Focado em frameworks modernos, oferece componentes React/Next.js fáceis de integrar. Ideal para MVPs que precisam de uma solução de login profissional rápida.", features: ["Até 10.000 usuários ativos mensais.", "Login social e MFA.", "Componentes UI prontos para uso."]},
            { id: 105, name: "Squoosh", offerType: "GRÁTIS PERMANENTE", type: "Otimização", category: "Ferramentas & APIs", url: "https://squoosh.app/", summary: "Ferramenta web para compressão e otimização de imagens (desenvolvida pelo Google).", detail: "Embora não seja uma API, é uma ferramenta de desenvolvimento essencial para garantir que as imagens do seu site carreguem rapidamente. Funciona offline no navegador.", features: ["100% gratuito e open-source.", "Otimização de imagens (lossy/lossless).", "Comparações side-by-side de compressão."]}
        ];

        let offerChart;

        const offerColors = {
            'GRÁTIS PERMANENTE': '#86A382', 
            'FREE TIER': '#A39182',
            'TRIAL': '#D4C7B8', 
            'FREE TIER + TRIAL': '#BFB2A3',
            'TRIAL/Garantia': '#D4C7B8', 
        };

        const getOfferTypeColor = (offer) => offerColors[offer] || '#BFB2A3';
        
        function getOfferClass(offer) {
            if (offer === 'GRÁTIS PERMANENTE') return 'offer-permanent';
            if (offer.includes('FREE TIER')) return 'offer-freetier';
            if (offer.includes('TRIAL')) return 'offer-trial';
            return 'offer-combined';
        }


        function populateFilters() {
            const categories = [...new Set(servicesData.map(s => s.category))].sort();
            const offerTypes = [...new Set(servicesData.map(s => s.offerType))].sort();
            const types = [...new Set(servicesData.map(s => s.type))].sort();

            const categoryFilter = document.getElementById('category-filter');
            const offerFilter = document.getElementById('offer-filter');
            const typeFilter = document.getElementById('type-filter');

            categories.forEach(cat => categoryFilter.innerHTML += `<option value="${cat}">${cat}</option>`);
            offerTypes.forEach(offer => offerFilter.innerHTML += `<option value="${offer}">${offer}</option>`);
            types.forEach(type => typeFilter.innerHTML += `<option value="${type}">${type}</option>`);
        }

        function renderServicesList(services) {
            const list = document.getElementById('services-list');
            
            if (services.length === 0) {
                list.innerHTML = `<div class="text-center py-8">
                    <h3 class="text-xl font-semibold text-gray-700">Nenhum serviço corresponde aos filtros.</h3>
                    <p class="text-gray-500 mt-2">Tente ser menos específico ou ajustar os termos de busca.</p>
                </div>`;
                document.getElementById('service-detail').classList.add('hidden');
                return;
            }

            list.innerHTML = services.map(service => `
                <button onclick="displayDetail(${service.id})" class="text-left w-full p-4 bg-gray-50 hover:bg-gray-100 rounded-lg shadow-sm transition duration-150 ease-in-out border-l-4 border-[#A39182]">
                    <div class="flex items-center justify-between mb-1">
                        <h3 class="text-lg font-bold text-gray-900">${service.name}</h3>
                        <span class="text-xs font-semibold px-2 py-0.5 rounded-full whitespace-nowrap ${getOfferClass(service.offerType)}">
                            ${service.offerType}
                        </span>
                    </div>
                    <p class="text-sm text-gray-600">${service.summary}</p>
                    <div class="mt-2 text-xs flex gap-3 flex-wrap">
                        <span class="font-medium text-[#86A382]">Categoria: ${service.category}</span>
                        <span class="font-medium text-[#A39182]">Finalidade: ${service.type}</span>
                    </div>
                </button>
            `).join('');
            
            // Auto-select the first item on initial load/filter change
            if (services.length > 0 && !document.getElementById('service-detail').classList.contains('hidden')) {
                displayDetail(services[0].id);
            } else if (services.length > 0) {
                 displayDetail(services[0].id);
            }
        }

        function formatFeatures(features) {
            if (!features || features.length === 0) {
                return '<p class="text-gray-600">Detalhes não especificados.</p>';
            }
            // Render features array as an unordered list
            const listItems = features.map(item => `<li class="ml-4 list-disc">${item}</li>`).join('');
            return `<ul class="space-y-2">${listItems}</ul>`;
        }


        function displayDetail(serviceId) {
            const service = servicesData.find(s => s.id === serviceId);
            const detailSection = document.getElementById('service-detail');
            const detailContent = document.getElementById('detail-content');
            
            if (!service) {
                detailSection.classList.add('hidden');
                return;
            }

            detailContent.innerHTML = `
                <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4 border-b pb-4">
                    <h2 class="text-3xl font-bold text-gray-900 mb-2 sm:mb-0">${service.name}</h2>
                    <a href="${service.url}" target="_blank" rel="noopener noreferrer" class="text-sm font-medium bg-[#86A382] text-white px-4 py-2 rounded-full hover:bg-[#6c8668] transition">
                        Visitar Plataforma →
                    </a>
                </div>
                
                <div class="flex flex-wrap gap-2 mb-4">
                    <span class="text-sm font-semibold px-3 py-1 rounded-full ${getOfferClass(service.offerType)}">
                        Oferta: ${service.offerType}
                    </span>
                    <span class="text-sm font-semibold px-3 py-1 rounded-full bg-gray-200 text-gray-700">
                        Categoria: ${service.category}
                    </span>
                    <span class="text-sm font-semibold px-3 py-1 rounded-full bg-gray-200 text-gray-700">
                        Finalidade: ${service.type}
                    </span>
                </div>

                <div class="mt-4 text-gray-700 space-y-4">
                    <p class="font-semibold text-lg border-l-4 border-gray-400 pl-3 italic">${service.summary}</p>
                    
                    <h3 class="text-xl font-bold text-gray-900 pt-2 border-t">Análise e Considerações</h3>
                    <p>${service.detail}</p>
                    
                    <h3 class="text-xl font-bold text-gray-900 pt-2 border-t">Pontos-chave da Oferta</h3>
                    <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                        ${formatFeatures(service.features)}
                    </div>
                </div>
            `;
            detailSection.classList.remove('hidden');
        }

        function updateChart(services) {
            const offerCounts = services.reduce((acc, service) => {
                acc[service.offerType] = (acc[service.offerType] || 0) + 1;
                return acc;
            }, {});

            const labels = Object.keys(offerCounts);
            const data = Object.values(offerCounts);
            const backgroundColors = labels.map(label => getOfferTypeColor(label));

            if (offerChart) {
                offerChart.data.labels = labels;
                offerChart.data.datasets[0].data = data;
                offerChart.data.datasets[0].backgroundColor = backgroundColors;
                offerChart.update();
            }
        }
        
        function initChart() {
            const ctx = document.getElementById('offer-chart').getContext('2d');
            offerChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Distribuição por Tipo de Oferta',
                        data: [],
                        backgroundColor: [],
                        borderColor: '#FDFBF8',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: {
                                    size: 12
                                },
                                boxWidth: 15,
                                padding: 15
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) {
                                        label = label.length > 16 ? label.substring(0, 16) + '...' : label;
                                        label += ': ';
                                    }
                                    if (context.parsed !== null) {
                                        label += context.parsed;
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        }

        function filterAndRender() {
            const category = document.getElementById('category-filter').value;
            const offer = document.getElementById('offer-filter').value;
            const type = document.getElementById('type-filter').value;
            const searchTerm = document.getElementById('search-input').value.toLowerCase();

            const filteredServices = servicesData.filter(service => {
                const matchesCategory = category === 'all' || service.category === category;
                const matchesOffer = offer === 'all' || service.offerType === offer;
                const matchesType = type === 'all' || service.type === type;
                
                // Search term matches name, summary, or details
                const searchFields = [service.name, service.summary, service.detail, service.category, service.type, ...(service.features || [])].join(' ').toLowerCase();
                const matchesSearch = searchFields.includes(searchTerm);
                
                return matchesCategory && matchesOffer && matchesType && matchesSearch;
            });
            
            document.getElementById('result-count').textContent = `Mostrando ${filteredServices.length} de ${servicesData.length} serviços no total.`;
            renderServicesList(filteredServices);
            updateChart(filteredServices);
        }

        document.addEventListener('DOMContentLoaded', () => {
            populateFilters();
            initChart();
            filterAndRender();

            document.getElementById('category-filter').addEventListener('change', filterAndRender);
            document.getElementById('offer-filter').addEventListener('change', filterAndRender);
            document.getElementById('type-filter').addEventListener('change', filterAndRender);
            document.getElementById('search-input').addEventListener('input', filterAndRender);
        });

    </script>
